# Authentication Settings
# Set to "true" to enable authentication, "false" to disable
AUTH_ENABLE=false

# Username for authentication (required if AUTH_ENABLE=true)
AUTH_USERNAME=admin

# Password for authentication (required if AUTH_ENABLE=true)
# IMPORTANT: Use a strong password in production!
AUTH_PASSWORD=your_secure_password_here

# Optional: Additional protected paths (comma-separated)
# These paths will require authentication when AUTH_ENABLE=true
# Example: /custom-admin,/private,/internal
PROTECTED_PATHS=

# Vercel KV (for short URLs storage on Vercel)
# Get these values from your Vercel KV database settings
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=

# Netlify Blobs (for storage on Netlify)
# These are automatically configured when deployed to Netlify
# No manual configuration needed for Netlify deployments

# Node Environment
NODE_ENV=production

